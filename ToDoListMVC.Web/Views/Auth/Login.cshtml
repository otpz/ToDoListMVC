@model UserLoginViewModel

    <div class="container" style="margin-top: 50px">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
                <div class="bg-white p-4 p-md-5 rounded shadow-sm">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none" style="margin-top: 0px;">Anasayfaya Dön</a>   
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-5">
                                <h3>Giriş yap</h3>
                            </div>
                        </div>
                    </div>
                    <form asp-controller="Auth" asp-action="Login" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All"></div>
                        <div class="row gy-3 gy-md-4 overflow-hidden">
                            <div class="col-12">
                                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Password" class="form-label">Şifre <span class="text-danger">*</span></label>
                                <input asp-for="Password" type="password" class="form-control" name="Password" id="Password" value="" required>
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn btn-lg btn-primary" type="submit">Giriş yap</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-12">
                            <hr class="mt-3 mb-3 border-secondary-subtle">
                            <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                <a asp-controller="Auth" asp-action="Register" class="link-secondary text-decoration-none">Yeni Hesap Oluştur</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
