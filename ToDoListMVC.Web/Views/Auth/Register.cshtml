<div class="container" style="margin-top: 30px">
    <div class="row justify-content-md-center">
        <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
            <div class="bg-white p-4 p-md-5 rounded shadow-sm w-100 position-relative">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Anasayfaya Dön</a>
                <div class="row">
                    <div class="col-12">
                        <div class="mb-5">
                            <h3>Kaydol</h3>
                        </div>
                    </div>
                </div>
                <form action="#!">
                    <div class="row gy-3 gy-md-4 overflow-hidden">
                        <div class="form-row">
                            <div class="col">
                                <label for="FirstName" class="form-label">İsim <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="FirstName" id="FirstName" placeholder="İsim" required>
                            </div>
                            <div class="col">
                                <label for="LastName" class="form-label">Soyisim <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="LastName" id="email" placeholder="Soyisim" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                        </div>

                        <div class="col-12">
                            <label for="password" class="form-label">Şifre <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" name="password" id="password" value="" required>
                        </div>
                        <div class="col-12">
                            <div class="d-grid">
                                <button class="btn btn-lg btn-primary" type="submit">KaydoL</button>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col-12">
                        <hr class="mt-5 mb-4 border-secondary-subtle">
                        <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                            <a asp-controller="Auth" asp-action="Login" class="link-secondary text-decoration-none">Giriş Yap</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
