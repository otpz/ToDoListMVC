@model TaskJobAddViewModel

<form asp-controller="User" asp-action="Add" class=" d-flex flex-row justify-content-between align-items-center py-3" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group w-25">
        <label asp-for="Title">Görev Başlığı</label>
        <input asp-for="Title" name="Title" type="text" class="form-control" id="Title" aria-describedby="emailHelp" placeholder="Bir görev giriniz.">
        <span asp-validation-for="Title"></span>
    </div>

    <div class="form-group w-25">
        <label asp-for="Description">Görev Açıklaması</label>
        <textarea asp-for="Description" name="Description" class="form-control" maxlength="50" rows="1" placeholder="Bir açıklama giriniz."></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-check d-flex flex-column justify-content-between">
        <div class="form-check">
            <label asp-for="Priority" class="form-check-label text-danger" style="font-weight: 500;" for="exampleRadios1">
                Yüksek Öncelikli
            </label>
            <input asp-for="Priority" class="form-check-input" type="radio" name="Priority" id="exampleRadios1" value="1">
            <span asp-validation-for="Priority"></span>
        </div>
        <div class="form-check">
            <label asp-for="Priority" class="form-check-label text-warning" style="font-weight: 500;" for="exampleRadios2">
                Orta Öncelikli
            </label>
            <input asp-for="Priority" class="form-check-input" type="radio" name="Priority" id="exampleRadios2" value="2">
            <span asp-validation-for="Priority"></span>
        </div>
        <div class="form-check">
            <label asp-for="Priority" class="form-check-label text-success" style="font-weight: 500;" for="exampleRadios3">
                Düşük Öncelikli
            </label>
            <input asp-for="Priority" class="form-check-input" type="radio" name="Priority" id="exampleRadios3" value="3">
            <span asp-validation-for="Priority"></span>
        </div>
    </div>
    <button class="btn btn-primary" style="width:150px; height:50px;" type="submit">
        Ekle +
    </button>
</form>