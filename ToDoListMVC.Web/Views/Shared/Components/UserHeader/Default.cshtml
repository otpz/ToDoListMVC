@model UserHeaderViewModel

<div class="btn-group mr-1">
    <div class="dropdown-toggle mr-5" style="cursor:pointer;" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        @Model.FirstName @Model.LastName
    </div>
    <div class="dropdown-menu mr-5">
        <a class="dropdown-item" asp-controller="User" asp-action="Profile" asp-route-userId="@Model.Id">Profil</a>
        <a class="dropdown-item" asp-controller="User" asp-action="Settings" asp-route-userId="@Model.Id">Ayarlar</a>
        <a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Çıkış Yap</a>
    </div>
</div>
